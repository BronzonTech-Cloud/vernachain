{
    "name": "vernachain/sdk",
    "description": "Official PHP SDK for Vernachain blockchain platform",
    "type": "library",
    "version": "2.0.0",
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.8",
        "ratchet/pawl": "^0.4.1",
        "ramsey/uuid": "^4.7",
        "symfony/validator": "^6.3",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Vernachain\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vernachain\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "authors": [
        {
            "name": "BronzonTech-Cloud",
            "email": "bronzontech@pm.me"
        }
    ],
    "license": "MIT"
} 